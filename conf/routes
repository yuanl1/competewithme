# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                               controllers.Application.index

# User API
GET     /users/:id                                      controllers.UsersController.getUser(id: String)
GET     /users/:id/challenges                           controllers.UsersController.getChallengesForUser(id: String)
GET     /users                                          controllers.UsersController.getUsers()
PUT     /users                                          controllers.UsersController.createUser()


# Challenge API
GET     /challenges/:id             controllers.ChallengesController.getChallenge(id: String)
GET     /challenges                 controllers.ChallengesController.getChallenges()
PUT     /challenges                 controllers.ChallengesController.createChallenge()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
